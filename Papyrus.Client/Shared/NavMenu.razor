@using Papyrus.Client.Services.Interfaces
@inject IAuthService authService

<div class="mt-3">
    <img src="assets/images/main.png" width="240" alt="Page image" />
</div>
<MudDivider Class="my-2" />
<MudNavMenu>
    <AuthorizeView>
        <Authorized>
            <MudNavLink Icon="@Icons.Filled.Dashboard" Href="/dashboard">Dashboard</MudNavLink>
            <MudNavLink Icon="@Icons.Filled.Person" Href="/my">My User</MudNavLink>
            <MudNavGroup Icon="@Icons.Filled.AdminPanelSettings" Title="Admin" Expanded="true">
                <MudNavLink Icon="@Icons.Filled.Apps" Href="/applications">Applications</MudNavLink>
                <MudNavLink Icon="@Icons.Filled.People" Href="/users">Users</MudNavLink>
            </MudNavGroup>
            <MudNavLink Icon="@Icons.Filled.Web" Href="/about">About</MudNavLink>
            <MudDivider Class="my-2" />
            <MudNavLink Icon="@Icons.Filled.Logout" OnClick="ToLogout">Log Out</MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavGroup Icon="@Icons.Filled.PeopleAlt" Title="Authentication" Expanded="true">
                <MudNavLink Icon="@Icons.Filled.Login" Href="/login">Login</MudNavLink>
                <MudNavLink Icon="@Icons.Filled.PersonAdd" Href="/register">Register</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about">About</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>

@code
{
    private void ToLogout()
    {
        authService.Logout();
    }
}
