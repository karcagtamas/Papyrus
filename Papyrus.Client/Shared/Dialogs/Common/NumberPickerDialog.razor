@inject IStringLocalizer<NumberPickerDialog> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Primary">
            @(Title ?? L["Title"])
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudNumericField Margin="Margin.Dense" @bind-Value="NumberValue" Variant="Variant.Outlined" Label="@(FieldLabel ?? L["Field.NumberValue"])" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="@(() => Dialog.Close())">@L["CloseAction"]</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@(() => Dialog.Close(NumberValue))">@L["ApplyAction"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance Dialog { get; set; } = default!;

    [Parameter]
    public int NumberValue { get; set; } = 12;

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? FieldLabel { get; set; }
}
