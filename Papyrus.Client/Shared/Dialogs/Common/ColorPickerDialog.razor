@using MudBlazor.Utilities
@inject IStringLocalizer<ColorPickerDialog> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Primary">
            @L["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudColorPicker PickerVariant="PickerVariant.Static" @bind-Value="ColorValue" />
    </DialogContent>
    <DialogActions>
        <MudButton Size="Size.Small" Variant="Variant.Text" Color="Color.Secondary" OnClick="@(() => Dialog.Close())" Class="mr-1">@L["CloseAction"]</MudButton>
        <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => Dialog.Close(ColorValue))">@L["ApplyAction"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance Dialog { get; set; } = default!;

    [Parameter]
    public MudColor ColorValue { get; set; } = "AAAAAA";
}
