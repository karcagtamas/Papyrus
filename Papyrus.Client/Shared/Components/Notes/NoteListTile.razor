@using KarcagS.Shared.Helpers
@using Papyrus.Shared.DTOs.Notes

<MudCard Elevation="2">
    <div class="tile-content p-2">
        <MudText Typo="Typo.h6" Color="Color.Primary">
            <b>@Note.Title</b>
        </MudText>
        <MudText Typo="Typo.body1">@Note.Creator</MudText>
        <MudSpacer />
        <div class="desc-row">
            <MudText Typo="Typo.body2">Last Update: @DateHelper.DateToString(Note.LastUpdate)</MudText>
            <MudIconButton Icon="@Icons.Filled.OpenInBrowser" Color="Color.Primary" OnClick="Open" />
        </div>
    </div>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public NoteLightDTO Note { get; set; } = default!;

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private void Open()
    {
        NavigationManager.NavigateTo($"/notes/editor/{Note.Id} ");
    }
}
