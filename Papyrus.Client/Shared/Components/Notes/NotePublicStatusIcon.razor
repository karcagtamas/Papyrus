@inject IStringLocalizer<NotePublicStatusIcon> L

<MudTooltip RootClass="d-flex flex-row align-items-center" Text="@(Public ? L["Status.Published"] : L["Status.NotPublished"])">
    <MudIcon Class="@Class" Size="Size" Icon="@(Public ? Icons.Filled.Visibility : Icons.Filled.VisibilityOff)" Color="Color.Info" />
</MudTooltip>

@code {
    [Parameter, EditorRequired]
    public bool Public { get; set; }

    [Parameter]
    public Size Size { get; set; } = Size.Medium;

    [Parameter]
    public string Class { get; set; } = "";
}
