<MudPaper Class="p-2 mb-3" Elevation="2">
    <div class="box">
        @ChildContent
    </div>
    <div class="d-flex flex-column w-100">
        @OtherRows
    </div>
</MudPaper>

@code {
    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; } = default!;

    [Parameter]
    public RenderFragment? OtherRows { get; set; }
}
