            <MudTh>
                <MudText Color="Color.Secondary">Read Tags</MudText>
            </MudTh>
            <MudTh>
                <MudText Color="Color.Secondary">Edit Tags</MudText>
            </MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Name"><MudText Color="Color.Primary">@context.Name</MudText></MudTd>
            <MudTd DataLabel="ReadOnly"><LogicText LogicValue="context.ReadOnly" TrueText="Yes" FalseText="No" /></MudTd>
            <MudTd DataLabel="GroupEdit"><LogicText LogicValue="context.GroupEdit" TrueText="Yes" FalseText="No" Colorize="true" /></MudTd>
