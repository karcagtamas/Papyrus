            <MudTd DataLabel="ReadNoteList"><LogicText LogicValue="context.ReadNoteList" TrueText="Yes" FalseText="No" Colorize="true" /></MudTd>
            <MudTd DataLabel="ReadNote"><LogicText LogicValue="context.ReadNote" TrueText="Yes" FalseText="No" Colorize="true" /></MudTd>
            <MudTd DataLabel="CreateNote"><LogicText LogicValue="context.CreateNote" TrueText="Yes" FalseText="No" Colorize="true" /></MudTd>
