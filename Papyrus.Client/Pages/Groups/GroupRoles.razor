                <MudText Color="Color.Secondary">Listing Notes</MudText>
            </MudTh>
            <MudTh>
                <MudText Color="Color.Secondary">Read Note</MudText>
            </MudTh>
            <MudTh>
                <MudText Color="Color.Secondary">Create Note</MudText>
            </MudTh>
            <MudTh>
                <MudText Color="Color.Secondary">Delete Note</MudText>
