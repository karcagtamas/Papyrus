@page "/groups/{GroupId:int}/notes/tags"
@attribute [Authorize]
@inject IStringLocalizer<GroupNoteTags> L

<GroupPageTitle PageName="@L["PageName"]" />

<div class="page-div">
    @if (PageEnabled)
    {
        <ActionBar>
            <InfoButton Text="@L["PageInfo"]" />
            @if (Rights.CanCreate)
            {
                <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="Create">@L["CreateAction"]</MudButton>
            }
        </ActionBar>
        <TagTree @ref="TagTree" Fetcher="Fetcher" GroupId="GroupId" CreateEnabled="Rights.CanCreate" EditEnabled="Rights.CanEdit" RemoveEnabled="Rights.CanRemove" />
    }
</div>