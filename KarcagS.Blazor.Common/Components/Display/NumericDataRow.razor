@using KarcagS.Shared.Helpers

<DataRow Title="@Title" Value="@WriteHelper.WriteNumberWithSuffix(Number, Suffix)" OneRow="OneRow" />

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = default!;

    [Parameter]
    public int? Number { get; set; }

    [Parameter]
    public string Suffix { get; set; } = default!;

    [Parameter]
    public bool OneRow { get; set; } = false;
}
